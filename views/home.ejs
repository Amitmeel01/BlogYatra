<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <style>
    .card {
      height: 95%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      margin-top: 2rem;
    }
    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
    .user {
      padding-top: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .user img.profile-image {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 0.5rem;
    }
    .user-info {
      display: flex;
      align-items: center;
      margin-top: 0.5rem;
    }
    .user-name {
      margin-left: 0.5rem;
    }
    .view-button {
      margin-left: auto;
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>
  <div class="container mt-3">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% for(let blog of blogs) { %>
        <div class="col d-flex">
          <div class="card w-100">
            <img src="<%= blog.blogImage %>" class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <div class="user">
                <div class="user-info">
                  <img src="<%= blog.createdBy.profileImage %>" alt="Profile Image" class="profile-image">
                  <span class="user-name"><%= blog.createdBy.fullName %></span>
                </div>
                <form action="/<%= blog._id %>" method="get" class="view-button">
                  <button class="btn btn-primary" type="submit">View</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
